<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666699"
    tools:context="com.example.willow.buttoncounterhmwrk.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="123dp"
        android:layout_height="61dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="79dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="148dp"
        android:fontFamily="casual"
        android:onClick="countADD"
        android:text="+"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterValue" />

    <Button
        android:id="@+id/button3"
        android:layout_width="124dp"
        android:layout_height="61dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="148dp"
        android:fontFamily="casual"
        android:onClick="countNEG"
        android:text="-"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counterValue" />

    <Button
        android:id="@+id/button4"
        android:layout_width="122dp"
        android:layout_height="61dp"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="131dp"
        android:layout_marginStart="131dp"
        android:fontFamily="casual"
        android:onClick="resetCount"
        android:text="Reset"
        android:textSize="24sp"
        android:textColor="@color/textColor"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/counterValue"
        android:layout_width="240dp"
        android:layout_height="129dp"
        android:layout_marginEnd="134dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="48dp"
        android:fontFamily="casual"
        android:text="CLICK COUNTER"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/btnColor"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
